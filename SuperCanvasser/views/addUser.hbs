<h1>Add User</h1>
<body>
    <div class="center" style="text-align: center;">
        {{message}}<p></p>
        <form action="/database/addUser" method="post">
            <table align="center">
                <tr>
                    <td align="right"><h5>First Name </h5></td>
                    <td align="left">
                        <input type="text" class="form-control" name="fname" value="">
                    </td>
                </tr>
                <tr>
                    <td align="right"><h5>Last Name </h5></td>
                    <td align="left">
                        <input type="text" class="form-control" name="lname" value="">
                        <br>
                    </td>
                </tr>
                <tr>
                    <td align="right"><h5>Email </h5></td>
                    <td align="left">
                        <input type="text" class="form-control" name="email" value="">
                    </td>
                </tr>
                <tr>
                    <td align="right"><h5>Username </h5></td>
                    <td align="left">
                        <input type="text" class="form-control" name="user" value="">
                    </td>
                </tr>
                <tr>
                    <td align="right"><h5>Password </h5></td>
                    <td align="left">
                        <input type="password" class="form-control" id="pass" name="pass" value="">
                    </td>
                </tr>
            </table>
            <table align="center">
                <tr>
                    <td align="right"><h5>User Permissions:</h5></td>
                    <td align="left">
                        <input type="checkbox" name="canvasser" value="1"> Canvasser&ensp;
                        <input type="checkbox" name="campaignManager" value="1"> Campaign Manager&ensp;
                        <input type="checkbox" name="sysAdmin" value="1"> System Admin
                    </td>
                </tr>
            </table>
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
    </div>
</body>

<input type="hidden" name="canvasser" value="0">
<input type="hidden" name="campaignManager" value="0">
<input type="hidden" name="sysAdmin" value="0">